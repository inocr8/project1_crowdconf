<% if can? :create, Speaker %>
  <%= link_to 'New speaker', new_speaker_path %>
<% end %>

<h1><%= @speaker.name %></h1>
<h2><%= @speaker.email %> | <%= @speaker.twitter %></h2>

<%= image_tag(@speaker.speaker_image.medium.url) %>

<% if @speaker.events.empty? == false %>
  <h3>List of events for this speaker:</h3>
    <ul>
      <% @speaker.events.each do |event| %>
        <li><%= link_to event.name, event_path(event) %></li>
      <% end %>
    </ul>
<% else %>
  <h4>New events for <%= @speaker.name %> to be added soon!</h4>
<% end %>

<% if can? :update, @speaker %>
  <%= link_to('Edit', edit_speaker_path(@speaker), method: :get) %>
<% end %>

<% if can? :destroy, @speaker %>
  <%= link_to('Delete', speaker_path(@speaker), method: :delete, data: {confirm: 'Delete this speaker? Are you sure?!'}) %>
<% end %>

<%= link_to 'Index', speakers_path %>
<%= link_to 'Back', :back %>
