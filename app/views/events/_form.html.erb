<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this Event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Event name' %><br />
    <%= f.text_field :name %>
  </div>
  <br />
  <div class="field">
    <%= f.label :short, 'Short description' %><br />
    <%= f.text_area :short, rows: 10 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :description, 'Full description' %><br />
    <%= f.text_area :description, rows: 20 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :event_image, 'Event image' %><br />
    <%= f.file_field :event_image %>
  </div>
  <br />
  <div class="field">
    <%= f.label :venue_id, 'Choose venue' %><br />
    <%= f.select :venue_id, Venue.all.collect { |v| [v.name, v.id] } %>
  </div>
  <br />
  <div class="field">
    <%= f.label :speaker_id, 'Choose speaker' %><br />
    <%= f.select :speaker_id, Speaker.all.collect { |s| [s.name, s.id] } %>
  </div>
  <br />
  <div class="field">
    <%= f.label :crowd_id, 'Choose crowd' %><br />
    <%= f.select :crowd_id, Crowd.all.collect { |c| [c.name, c.id] } %>
  </div>
  <br />
  <div class="field">
    <%= f.label :tag_id, 'Choose tag' %><br />
    <%= f.select :tag_id, Tag.all.collect { |t| [t.name, t.id] } %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>